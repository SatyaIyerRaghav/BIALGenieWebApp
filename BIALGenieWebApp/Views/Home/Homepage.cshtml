    <div id="services" class="services">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <h2 class="main-title">Our Services</h2>
                    <hr>
                </div>
            </div>
            <div class="divide50"></div>
            <div class="row">

                <div class="col-md-4 text-center">
                    <div class="service-item">
                        <i><img src="~/Travellers-master/img/gym2.jpg" height="200" width="350" class="retina" alt="" /></i>
                        <br />
                        <h4 class="service-title" style="text-align:center">@Html.ActionLink("StayFit Gym Services", "GymServicesDetails")</h4>
